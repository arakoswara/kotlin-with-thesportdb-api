<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.kotlinSub2Ara.SplashScreen"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:paddingTop="5dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            tools:ignore="MissingConstraints">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/white"
                android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/leagueName"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <Space android:layout_width="match_parent" android:layout_height="@dimen/text_size"/>

            <LinearLayout
                    android:id="@+id/clubOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">
                <ImageView
                        android:id="@+id/fbLogoOne"
                        android:src="@drawable/ic_terminal_icon"
                        android:layout_width="@dimen/h1"
                        android:layout_height="@dimen/h1"
                        android:contentDescription="@string/app_name"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/text_size"
                            android:id="@+id/fbNameOne"
                            android:text="@string/club_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:drawableTop="@color/white"
                            android:drawableEnd="@color/white"/>

                    <Space android:layout_width="@dimen/text_size" android:layout_height="@dimen/text_size"/>

                    <TextView
                            android:textSize="@dimen/text_size"
                            android:id="@+id/ScoreOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:drawableTop="@color/white"
                            android:drawableEnd="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <Space android:layout_width="match_parent" android:layout_height="@dimen/text_size"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                <ImageView
                        android:id="@+id/fbLogoTwo"
                        android:src="@drawable/ic_juventus"
                        android:layout_width="@dimen/h1"
                        android:layout_height="@dimen/h1"
                        android:contentDescription="@string/app_name"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/text_size"
                            android:id="@+id/fbNameTwo"
                            android:textColor="@color/black"
                            android:text="@string/club_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@color/white"/>

                    <Space android:layout_width="@dimen/text_size" android:layout_height="@dimen/text_size"/>

                    <TextView
                            android:textSize="@dimen/text_size"
                            android:id="@+id/ScoreTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:drawableTop="@color/white"
                            android:drawableEnd="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
